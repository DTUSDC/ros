<?xml version="1.0"?>
<launch>
    <arg name="odom_frame_id" default="odom"/>
    <arg name="base_frame_id" default="base_link"/>
    <arg name="global_frame_id" default="map"/>
    <arg name="odom_topic" default="odom" />
    <arg name="laser_topic" default="scan" />

    <!-- Run the map server -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find kbot)/map/try2.yaml" output="screen"/>
    <include file="$(find kbot)/launch/amcl_diff.launch" />
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find kbot)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find kbot)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find kbot)/param/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find kbot)/param/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find kbot)/param/global_planner_params.yaml" command="load" />
        <rosparam file="$(find kbot)/param/dwa_local_planner_params.yaml" command="load" />
        <rosparam file="$(find kbot)/param/move_base_params.yaml" command="load" />
        <rosparam file="$(find kbot)/param/navfn_global_planner_params.yaml" command="load" />

        <!-- reset frame_id parameters using user input data -->
        <param name="global_costmap/global_frame" value="$(arg global_frame_id)"/>
        <param name="global_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
        <param name="local_costmap/global_frame" value="$(arg odom_frame_id)"/>
        <param name="local_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
        <param name="DWAPlannerROS/global_frame_id" value="$(arg odom_frame_id)"/>
    </node>
</launch>