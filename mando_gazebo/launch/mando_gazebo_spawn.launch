<?xml version="1.0"?>
<!-- This launch file is used for spawning the bot both in gazebo and rviz-->
<launch>
<!-- Vehicle pose -->
  <arg name="x" default="0.0"/>
  <arg name="y" default="0.0"/>
  <arg name="z" default="0.0"/>
  <arg name="roll" default="0.0"/>
  <arg name="pitch" default="0.0"/>
  <arg name="yaw" default="0"/>
<!-- Loading the bot on parameter server-->
  <param name ="robot_description" command = "$(find xacro)/xacro --inorder $(find mando_description)/urdf/mando.xacro" />
<!-- Publishing the joint values for non fixed joints-->
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
  	<param name="use_gui" value="true" />
  </node>
<!-- Needed for Rviz so state publisher can pass on values to tf-->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
<!-- Launching the Rviz node-->
  <node name="rviz" pkg="rviz" type="rviz" args=""/>
<!-- Loading an empty world-->
 <include file="$(find gazebo_ros)/launch/empty_world.launch">
 </include>
<!--Spawning the urdf in Gazebo -->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" args="-urdf -model mando -param robot_description"/>
</launch>
    