<?xml version="1.0"?>
<launch>
<!-- Run the map server -->
<node name="map_server" pkg="map_server" type="map_server"
args="$(find mando_gazebo)/map/igvc.yaml" output="screen"
/>
<include file="$(find mando_gazebo)/launch/amcl_diff.launch" />
<node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
<rosparam file="$(find mando_gazebo)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
<rosparam file="$(find mando_gazebo)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
<rosparam file="$(find mando_gazebo)/param/local_costmap_params.yaml" command="load" />
<rosparam file="$(find mando_gazebo)/param/global_costmap_params.yaml" command="load" />
<rosparam file="$(find mando_gazebo)/param/base_local_planner_params.yaml" command="load" />
</node>
</launch>